{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "extends": ["@radashi-org/biome-config"],
  "files": {
    "include": ["scripts/**/*.mjs", "demos/**/*.ts"],
    "ignore": ["**/typebox-codegen/**"]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noBannedTypes": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noUnsafeDeclarationMerging": "off"
      }
    }
  }
}
