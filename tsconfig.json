{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/tmp",
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext"],
    "baseUrl": "./",
    "paths": {
      "pg-nano": ["./dist/pg-nano.d.ts"],
      "pg-nano/node": ["./dist/node/index.d.ts"],
      "pg-nano/plugin": ["./dist/node/plugin.d.ts"],
      "pg-native": ["./dist/node_modules/pg-native"]
    }
  }
}
