{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/tmp",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "lib": ["esnext"],
    "paths": {
      "pg-nano": ["./src/core/mod.ts"],
      "pg-nano/node": ["./src/node/index.ts"],
      "pg-nano/config": ["./src/node/config/config.ts"],
      "pg-nano/plugin": ["./src/node/config/plugin.ts"],
      "pg-native": ["./packages/pg-native/src/index.ts"],
      "postgres-array": ["./packages/postgres-array"],
      "postgres-bytea": ["./packages/postgres-bytea"],
      "postgres-composite": ["./packages/postgres-composite/src/index.ts"],
      "postgres-date": ["./packages/postgres-date"],
      "postgres-interval": ["./packages/postgres-interval"],
      "postgres-range": ["./packages/postgres-range/src/index.ts"],
      "@pg-nano/plugin-crud": ["./plugins/crud/src/plugin.ts"]
    }
  }
}
